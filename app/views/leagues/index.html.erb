<h1>Leagues</h1>
 <% if current_user %>
    <button type="button" class="btn btn-primary"> <%= link_to 'Create League', new_league_path %> </button>
    <% else %>
    <% end %>
<div>
  <table id="leagues_list">
    <th>League Name</th>
    <th>Challenge Season</th>
    <th>Premier Date</th>
    <% @leagues.each do |l| %>
        <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
          <td>
          <%= link_to l.title, league_path(l.id) %> <br>
          </td>
          <td><%= Season.find(l.season_id).title %>
          </td>
          <td><%= l.premier %>
          </td>
          <% if current_user %>
          <td><button type="button" class="btn btn-primary"> <%= link_to 'Join League', new_roster_path(:league_id => l.id) %> </button></td>
          <% else %>
          <% end %>
        </tr>
    <% end%>
    
  </table>


</div>